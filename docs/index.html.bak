    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        .quiz-container {
            max-width: 500px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
        }
        .choice {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            transition: 0.3s;
        }
        .choice:hover {
            background-color: #f0f0f0;
        }
        .correct {
            background-color: #4CAF50 !important;
            color: white;
        }
        .incorrect {
            background-color: #FF5733 !important;
            color: white;
        }
        #answer {
            font-weight: bold;
            margin-top: 10px;
        }
        button#next {
            margin-top: 10px;
            padding: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<div class="quiz-container">
    <h2 id="question">Loading question...</h2>
    <div id="choices"></div>
    <p id="answer"></p>
    <button id="next" style="display:none;">Next Question</button>
    <button id="quit">Quit</button>
</div>

<script>
    let questions = [];
    let selectedQuestion = null;
    let correctAnswers = [];

    function loadQuestion() {
        if (questions.length === 0) {
            $("#question").text("No questions available.");
            return;
        }

        let randomIndex = Math.floor(Math.random() * questions.length);
        selectedQuestion = questions[randomIndex];

        $("#question").text(selectedQuestion.question);
        $("#choices").empty();
        $("#answer").empty();
        $("#next").hide();

        correctAnswers = selectedQuestion.correctAnswers || []; 

        selectedQuestion.choices.forEach((choice, index) => {
            $("#choices").append(`<button class="choice" data-answer="${choice}">${choice}</button>`);
        });

        $(".choice").click(function() {
            let selectedAnswer = $(this).data("answer");

            if (correctAnswers.includes(selectedAnswer)) {
                $(this).addClass("correct");
            } else {
                $(this).addClass("incorrect");
            }

            // Show full explanation
            $("#answer").text(selectedQuestion.fullText);
            $(".choice").prop("disabled", true); // Disable further selections
            $("#next").show();
        });
    }

    function fetchQuestions() {
        $.getJSON("https://tetramatrix.github.io/aws-certified-cloud-practitioner/questions.json", function(data) {
            questions = data;
            loadQuestion();
        }).fail(function() {
            $("#question").text("Failed to load questions.");
        });
    }

    $("#quit").click(function() {
        $.ajax({
            url: "/quit", 
            method: "POST",
            success: function(response) {
                alert("You have quit the quiz.");
            }
        });
    });

    $("#next").click(function() {
        loadQuestion();
    });

    $(document).ready(function() {
        fetchQuestions();
    });
</script>

</body>
